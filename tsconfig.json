{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es2023"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,
    "strict": true,

    /* Emit */
    "outDir": "./dist",
    "rootDir": ".",
  },
  "include": ["src/**/*", "client/**/*", "server/**/*"],
  "exclude": ["node_modules"]
}