{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2023"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*", "client/**/*", "server/**/*"],
  "exclude": ["node_modules"]
}